{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types/",
    "declaration": true,
    "rootDir": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "files": ["src/index.ts"],
  "include": ["next-env.d.ts", "emotion.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.stories.tsx"]
}
